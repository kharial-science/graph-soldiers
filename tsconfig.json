{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "es2019",
        "es2020",
        "es2021",
        "esnext",
        "dom"
      ],
      "sourceMap": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "outDir": "dist"
    },
    "ts-node": {
      "files": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
  }